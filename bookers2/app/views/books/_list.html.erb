<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr></tr>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
            </tbody>
          </table>
          <p><%= link_to edit_user_path(@user) do %>
      <button type="button" class="btn btn-outline-secondary btn-sm btn-block"><i class="fas fa-user-cog"></i></button></p>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, id: 'new_book', class: 'new_book', local: true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title %>
      <label for="inputOpinion">Opinion</label>
      <%= f.text_field :body %>
      <button class="btn btn-success", type="submit">Create Book</button>
      <% end %>