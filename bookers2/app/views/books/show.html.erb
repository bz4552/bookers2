      <p id="notice"></p>
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr></tr>
          <tr>
            <th>name</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= @user.introduction %></td>
          </tr>
            </tbody>
          </table>
          <p><%= link_to edit_user_path(@user) do %>
      <button type="button" class="btn btn-outline-secondary btn-sm btn-block"><i class="fas fa-user-cog"></i></button></p>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new, id: 'new_book', class: 'new_book', local: true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title %>
      <label for="inputOpinion">Opinion</label>
      <%= f.text_field :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                  <br>
                  <%= link_to @user.name, user_path(@user.id) %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
