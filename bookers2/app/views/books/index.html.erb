<body>
  <header>
  </header>
  <main>
   <% if @book.errors.any? %>
   <div class="text-danger">
     <%= @book.errors.count %>error prohibited this obj from being saved:
     <% @book.errors.full_messages.each do |message| %>
     <%= message %>
   <% end %>
   </div>
   <% end %>
    <div class="container">
      <%= flash[:notice] %>
      <p id="notice"></p>
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= render 'users/list', user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to (attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" ), user_path(book.user) %>
            </td>
            <td>
              <%= link_to book.title , book_path(book.id) %>
            </td>

            <td>
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </main>
</div>
</body>