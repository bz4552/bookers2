<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <div class="box">
        <h2>User info</h2>
        <% if @user.errors.any? %>
            <div class="panel panel-danger">
              <div class="panel-heading">
                <%= @user.errors.count %>errors prohibited this obj from being saved:<br>
              </div>
              <div class="panel-body">
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

        <%= form_with model:(@user) do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name %>
        <h4>Image</h4>
        <%= f.attachment_field :profile_image, placeholder: 'ファイルを選択', class: "btn btn-secondary col-sm-5" %>
        <h4>introduction</h4>

        <%= f.text_area :introduction %>
        <%= f.submit 'Update User', class: "btn btn-secondary col-sm-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
