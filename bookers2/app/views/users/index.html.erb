<body>
  <header>
  </header>
  <main>
    <div class="container">
    <% flash[:notice] %>
    <p id="notice"></p>
    <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"  %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <td><%= current_user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= current_user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <p><%= link_to edit_user_path(current_user) do %>
      <button type="button" class="btn btn-outline-secondary btn-sm btn-block"><i class="fas fa-user-cog"></i></button></p>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, id: 'new_book', class: 'new_book', local: true do |f| %>
      <label for="inputTitle">Title</label>
      <%= f.text_field :title %>
      <label for="inputOpinion">Opinion</label>
      <%= f.text_field :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Image</th>
            <th>Name</th>
          </tr>
        </thead>
          <tbody>
            <tr></tr>
             <% @users.each do |user| %>
             <tr>
               <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
               <td><%= user.name %></td>
               <td><%= link_to "Show" , user_path(user.id) %></td>
             </tr>
             <% end %>
          </tbody>
      </table>
    </div>
    </div>
  </main>
</div>
</body>